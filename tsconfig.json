{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "lib": ["ES2020"],
    "outDir": "out",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vscode", "node", "mocha"]
  },
  "include": ["src"],
  "exclude": ["node_modules", ".vscode-test"]
}
